<div class="row small-up-1 medium-up-2 large-up-3">
    {{#each jobLists}}
    <div class="column">
        <div class="card" data-savedid="{{id}}" data-applied="{{applied}}">
            <div class="card-divider" style="text-align: center;">
                {{title}}
            </div>
            <div class="card-section">
                <p>{{company}}</p>
                <a href="{{url}}" target="_blank">Go to Job Page</a>
                <hr class="rounded-line">
                <form class="enter-todo">
                    <input type="text" placeholder="Enter Todo" />
                </form>

                <ul class="list-group">
                    {{#each Todos}}
                    {{#if complete}}
                    <li class="list-group-item todo-done" data-todoid="{{id}}" data-complete="{{complete}}">{{text}}
                        <span><button class='button tiny btn-complete disabled'>✓</button></span>
                    </li>
                    {{else }}
                    <li class="list-group-item" data-todoid="{{id}}" data-complete="{{complete}}">{{text}}
                        <span><button class='button tiny btn-complete'>✓</button></span>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>

            </div>

        </div>
    </div>
    {{/each}}
</div>